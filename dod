-- UI
local Window = Rayfield:CreateWindow({Name = "DOD Lite", LoadingTitle = "DOD Lite", LoadingSubtitle = "Stamina • ESP • Abilities", ConfigurationSaving = { Enabled = false }, KeySystem = false})

-- Stamina Tab
local StaminaTab = Window:CreateTab("Stamina", 0)
StaminaTab:CreateToggle({Name = "No Stamina Loss", CurrentValue = Config.Stamina.NoLoss, Callback = function(v) Config.Stamina.NoLoss = v end})
StaminaTab:CreateToggle({Name = "No Fatigue", CurrentValue = Config.Stamina.NoFatigue, Callback = function(v) Config.Stamina.NoFatigue = v end})
StaminaTab:CreateInput({Name = "Max Stamina", PlaceholderText = "100", NumbersOnly = true, Callback = function(v) Config.Stamina.MaxStamina = tonumber(v) or 100 end})
StaminaTab:CreateInput({Name = "Sprint Speed", PlaceholderText = "25", NumbersOnly = true, Callback = function(v) Config.Stamina.SprintSpeed = tonumber(v) or 25 end})

-- ESP Tab
local ESPTab = Window:CreateTab("ESP", 0)
ESPTab:CreateToggle({Name = "Survivor ESP", CurrentValue = Config.Visuals.SurvivorESP.Enabled, Callback = function(v) Config.Visuals.SurvivorESP.Enabled = v end})
ESPTab:CreateToggle({Name = "Killer ESP", CurrentValue = Config.Visuals.KillerESP.Enabled, Callback = function(v) Config.Visuals.KillerESP.Enabled = v end})
ESPTab:CreateButton({Name = "Refresh ESP", Callback = function()
    for _, p in Players:GetPlayers() do
        CleanupESP(p)
        if p.Character then ApplyESP(p) end
    end
    Notify("ESP Refreshed", "", 2, true)
end})

function ConvertDropdownValue(tbl)
    if type(tbl) == "table" then
        for _,element in ipairs(tbl) do
            return tostring(element)
                end
            else
        return tostring(tbl)
    end
end

-- Abilities Tab – Only 2 Abilities + 2 Keybinds
local Tab_Abilities = Window:CreateTab("Abilities", 0)

-- Ability 1
local Ability1 = "Block"
local Keybind1 = Enum.KeyCode.F

Tab_Abilities:CreateDropdown({
    Name = "Ability 1",
    Options = AbilityNames,
    CurrentOption = Ability1,
    MultiSelection = false,
    Callback = function(Value)
        Ability1 = ConvertDropdownValue(Value)
    end,
})

Tab_Abilities:CreateKeybind({
    Name = "Keybind 1",
    CurrentKeybind = Keybind1.Name,
    HoldToInteract = false,
    Callback = function(Value)
        local success, code = pcall(function() return Enum.KeyCode[Value] end)
        if success and code then
            Keybind1 = code
        end
    end,
})

-- Ability 2
local Ability2 = "Hotdog"
local Keybind2 = Enum.KeyCode.T

Tab_Abilities:CreateDropdown({
    Name = "Ability 2",
    Options = AbilityNames,
    CurrentOption = Ability2,
    MultiSelection = false,
    Callback = function(Value)
        Ability2 = ConvertDropdownValue(Value)
    end,
})

Tab_Abilities:CreateKeybind({
    Name = "Keybind 2",
    CurrentKeybind = Keybind2.Name,
    HoldToInteract = false,
    Callback = function(Value)
        local success, code = pcall(function() return Enum.KeyCode[Value] end)
        if success and code then
            Keybind2 = code
        end
    end,
})

-- Use abilities safely
local RepEvents = game:GetService("ReplicatedStorage"):WaitForChild("Events")
local UseAbilityRemote = RepEvents:WaitForChild("RemoteFunctions"):WaitForChild("UseAbility")

local function UseAbilitySafe(abilityName)
    pcall(function()
        UseAbilityRemote:InvokeServer(tostring(abilityName))
    end)
end

-- Keybind detection
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed or input.UserInputType ~= Enum.UserInputType.Keyboard then return end

    if input.KeyCode == Keybind1 then
        spawn(function() UseAbilitySafe(Ability1) end)
    end
    if input.KeyCode == Keybind2 then
        spawn(function() UseAbilitySafe(Ability2) end)
    end
end)

Notify("DOD Lite Loaded", "Config removed, running clean.", 5, true)
